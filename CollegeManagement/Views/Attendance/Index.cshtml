@model IEnumerable<CollegeManagement.Models.AttendanceModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Attendance Records</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <h2>Attendance Records</h2>
    <p>
        @Html.ActionLink("Mark Attendance", "Create")
    </p>

    <table class="table">
        <tr>
            <th>Student ID</th>
            <th>Subject ID</th>
            <th>Date</th>
            <th>Status</th>
            <th>Action</th>
        </tr>

        @foreach (var record in Model)
        {
            <tr>
                <td>@record.StudentID</td>
                <td>@record.SubjectID</td>
                <td>@record.Date.ToShortDateString()</td>
                <td>@record.Status</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = record.AttendanceID })" class="btn btn-link">
                        <i class="fas fa-edit"></i>
                    </a> |
                    <a href="@Url.Action("Delete", new { id = record.AttendanceID })" class="btn btn-link">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </table>
</body>
</html>
