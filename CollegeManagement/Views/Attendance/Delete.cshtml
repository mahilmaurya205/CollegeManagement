@model CollegeManagement.Models.AttendanceModel

<h2>Delete Attendance Record</h2>

<p>Are you sure you want to delete this attendance record?</p>

<div>
    <h4>Attendance Details</h4>
    <dl class="row">
        <dt class="col-sm-2">Attendance ID</dt>
        <dd class="col-sm-10">@Model.AttendanceID</dd>

        <dt class="col-sm-2">Student ID</dt>
        <dd class="col-sm-10">@Model.StudentID</dd>

        <dt class="col-sm-2">Subject ID</dt>
        <dd class="col-sm-10">@Model.SubjectID</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="AttendanceID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
