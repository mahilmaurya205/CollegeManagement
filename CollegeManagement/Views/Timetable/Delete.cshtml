@model CollegeManagement.Models.TimetableModel

<h2>Delete Timetable</h2>

<p>Are you sure you want to delete this timetable entry?</p>

<div>
    <h4>Timetable Details</h4>
    <dl class="row">
        <dt class="col-sm-2">Class ID</dt>
        <dd class="col-sm-10">@Model.ClassID</dd>

        <dt class="col-sm-2">Subject ID</dt>
        <dd class="col-sm-10">@Model.SubjectID</dd>

        <dt class="col-sm-2">Day</dt>
        <dd class="col-sm-10">@Model.Day</dd>

        <dt class="col-sm-2">Time Slot</dt>
        <dd class="col-sm-10">@Model.TimeSlot</dd>

        <dt class="col-sm-2">Room</dt>
        <dd class="col-sm-10">@Model.Room</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ClassID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
